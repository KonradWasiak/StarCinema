@model StarCinema.Models.CRUDModels.MovieModels.AddEditMovieViewModel;
@{
    ViewData["Title"] = "AddMovie";
    Layout = "~/Views/Shared/_CRUDLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">


        <form class="form app-form" method="post" asp-action="AddMovie" asp-controller="Movie" enctype="multipart/form-data">
            <h2 class="app-form-h2"> <i class="glyphicon glyphicon-plus"></i> Add AddEditMovie</h2>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input class="app-form-input" value="" placeholder="Title" asp-for="@Model.Request.Title" />
            </div>
            <div class="form-group">
                <select class="app-form-select" asp-for="@Model.Request.CategoryId" asp-items="@Model.Categories"></select>
            </div>
            <div class="form-group">
                <input class="app-form-input" value="" placeholder="Directory" asp-for="@Model.Request.Directory" />
            </div>
            <div class="form-group">
                <h4 class="app-form-h4">Release date</h4>
                <input asp-for="@Model.Request.ReleaseDate" class="form-control" value="@DateTime.Today" />
            </div>
            <div class="form-group">
                <textarea class="app-form-input wide" placeholder="Description" asp-for="@Model.Request.Description"></textarea>
            </div>
            <div class="form-group">
                <h4 class="app-form-h4">Is 3D?</h4>
                <input asp-for="@Model.Request.Is3D" class="form-control" value="false" />
                <input type="hidden" value="false" name="IncludeSalesTax" />
            </div>
            <div class="form-group">
                <h4 class="app-form-h4">Duration time</h4>
                <input asp-for="@Model.Request.DurationTime" class="app-form-input" value="150" />
            </div>
            <div class="form-group">
                <h4 class="app-form-h4">Url to trailer</h4>
                <input asp-for="@Model.Request.TrailerUrl" value="" class="app-form-input" />
            </div>
            <div class="form-group">
                <h4 class="app-form-h4">AddEditMovie poster</h4>
                <input class="form-control-file" value="" asp-for="@Model.Request.PosterImage" />
            </div>
            <div class="form-group">
                <h4 class="app-form-h4">AddEditMovie banner</h4>
                <input class="form-control-file" value="" asp-for="@Model.Request.BannerImage" />
            </div>

            <button class="btn btn-danger app-form-submit" type="submit"><i class="glyphicon glyphicon-plus"></i>ADD MOVIE</button>
        </form>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form asp-action="Movies" asp-controller="Movie" asp-route-id="1" method="get">
            <button type="submit" class="btn btn-info app-form-submit"> <i class="glyphicon glyphicon-arrow-left"></i> BACK TO LIST</button>
        </form>
    </div>
</div>
