@model StarCinema.Models.CRUDModels.MovieViewModel
@{
    ViewData["Title"] = "AddMovie";
    Layout = "~/Views/Shared/_CRUDLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">


        <form class="form app-form" method="post" asp-action="AddMovie" asp-controller="Movie">
            <h2 class="app-form-h2"> <i class="glyphicon glyphicon-plus"></i> Add Movie</h2>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input class="app-form-input" placeholder="Title" asp-for="@Model.Title" />
            </div>
            <div class="form-group">
                <select class="app-form-select" asp-for="Category" asp-items="Model.AllCategories"></select>
            </div>
            <div class="form-group">
                <input class="app-form-input" placeholder="Directory" asp-for="@Model.Directory" />
            </div>
            <div class="form-group">
                <textarea class="app-form-input wide" placeholder="Description" asp-for="@Model.Directory"></textarea>
            </div>
            <div class="form-group">
                <input class="form-control-file" asp-for="@Model.Image" />
            </div>


            <button class="btn btn-danger app-form-submit" type="submit"><i class="glyphicon glyphicon-plus"></i>ADD MOVIE</button>
        </form>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form asp-action="Categories" asp-controller="Category" method="get">
            <button type="submit" class="btn btn-info app-form-submit"> <i class="glyphicon glyphicon-arrow-left"></i> BACK TO LIST</button>
        </form>
    </div>
</div>
