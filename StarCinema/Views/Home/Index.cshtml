@model StarCinema.Models.IndexModels.IndexMoviesListViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>
    @{
        var path = "images/MoviesPosters/";
    }
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <div class="item-container-left" style="background:linear-gradient(0deg,rgba(30,30,30,0.3),rgba(30,30,30,0.3)),url(@(path + Model.LatestMovies.ElementAt(0).Id.ToString() + "Index.jpg")">
                <div class="item-content col-md-5">
                    <h2 class="carousel-h2">@Model.LatestMovies.ElementAt(0).Title</h2>
                    <h3 class="carousel-h3">Release: @Model.LatestMovies.ElementAt(0).ReleaseDate.ToShortDateString()</h3>
                    <form asp-action="ShowMovie" asp-controller="Movie" asp-route-id="@Model.LatestMovies.ElementAt(0).Id" asp-route-commentsPage="1" method="get">
                        <input type="hidden" name="commentsPage" value="1" />
                        <button type="submit" class="app-form-submit-left btn btn-danger carousel-button">SHOW MORE</button>
                    </form>
                    <button class="btn btn-warning carousel-button">BOOK A TICKET</button>
                </div>
                <div class="item-content-transparent col-md-7">
                    <i data-toggle="modal" data-target="#0" class="cursor-pointer glyphicon glyphicon-play-circle carousel-icon"></i><h1 class="cursor-pointer watch-trailer-h1">TRAILER</h1>
                </div>
            </div>
        </div>
        <div class="item">
            <div class="item-container-left" style="background:linear-gradient(0deg,rgba(30,30,30,0.3),rgba(30,30,30,0.3)),url(@(path + Model.LatestMovies.ElementAt(1).Id.ToString() + "Index.jpg")">
                <div class="item-content col-md-5">
                    <h2 class="carousel-h2">@Model.LatestMovies.ElementAt(1).Title</h2>
                    <h3 class="carousel-h3">Release: @Model.LatestMovies.ElementAt(1).ReleaseDate.ToShortDateString()</h3>
                    <form asp-action="ShowMovie" asp-controller="Movie" asp-route-movieId="@Model.LatestMovies.ElementAt(0).Id" asp-route-commentsPage="1" method="get">
                        <input type="hidden" name="commentsPage" value="1" />
                        <button type="submit" class="app-form-submit-left btn btn-danger carousel-button">SHOW MORE</button>
                    </form>
                    <button class="btn btn-warning carousel-button">BOOK A TICKET</button>
                </div>
                <div class="item-content-transparent col-md-7">
                    <i data-toggle="modal" data-target="#1" class="cursor-pointer glyphicon glyphicon-play-circle carousel-icon"></i><h1 class="cursor-pointer watch-trailer-h1">TRAILER</h1>
                </div>
            </div>
        </div>
        <div class="item">
            <div class="item-container-left" style="background:linear-gradient(0deg,rgba(30,30,30,0.3),rgba(30,30,30,0.3)),url(@(path + Model.LatestMovies.ElementAt(2).Id.ToString() + "Index.jpg")">
                <div class="item-content col-md-5">
                    <h2 class="carousel-h2">@Model.LatestMovies.ElementAt(2).Title</h2>
                    <h3 class="carousel-h3">Release: @Model.LatestMovies.ElementAt(2).ReleaseDate.ToShortDateString()</h3>
                    <form class="" asp-action="ShowMovie" asp-controller="Movie" asp-route-id="@Model.LatestMovies.ElementAt(0).Id" asp-route-commentsPage="1" method="get">
                        <input type="hidden" name="commentsPage" value="1" />
                        <button type="submit" class="app-form-submit-left btn btn-danger carousel-button">SHOW MORE</button>
                    </form>
                    <button class="btn btn-warning carousel-button">BOOK A TICKET</button>
                </div>
                <div class="item-content-transparent col-md-7">
                    <i data-toggle="modal" data-target="#2" class="cursor-pointer glyphicon glyphicon-play-circle carousel-icon"></i><h1 class="watch-trailer-h1">TRAILER</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div id="collapse2" class="row">
    <div class="hidden-sm hidden-xs col-lg-8 col-md-8">
        <div class="btn-group btn-group-justified" role="group" aria-label="...">
            @foreach (var category in Model.Categories)
            {

                <div class="btn-group" role="group">
                    <form method="get" asp-controller="Movie" asp-action="MoviesFromCategory">
                        <input type="hidden" name="categoryId" value="@category.Id" />
                        <button type="submit" class="btn-category btn btn-default">@category.CategoryName</button>
                    </form>
                </div>
            }
        </div>
    </div>

    <div class="col-lg-4 col-md-4">
        <form>
            <div class="input-group">
                <input type="text" class="nav-search form-control" placeholder="Find your cinema">
                <span class="input-group-btn">
                    <button class="btn-search btn btn-danger" type="button">SEARCH</button>
                </span>
            </div><!-- /input-group -->
        </form>
    </div>
</div>
<div class="row">
    <div class="index-content col-lg-12">
        <ul class="nav nav-pills nav-justified" id="indexTab">
            <li class="active"><a data-toggle="tab" href="#newest"><i class="glyphicon glyphicon-time"></i> Newest</a></li>
            <li><a data-toggle="tab" href="#soon"><i class="glyphicon glyphicon-calendar"></i> Coming soon</a></li>
            <li><a data-toggle="tab" href="#highestRated"><i class="glyphicon glyphicon-fire"></i> Most popular</a></li>
        </ul>
        <br />
        <div class="tab-content">
            <div id="newest" class="tab-pane fade in active">
                @{
                    int j = 0;
                    foreach (var m in Model.LatestMovies)
                    {
                        j++;
                        @if ((((j - 1) % 3 == 0) && (j != 1)) || (j == 1))
                         {
                            @:<div class="row">
                         }

                        var imgSrc = "images/MoviesPosters/" + m.Id.ToString() + ".jpg";
                        <div class="col-sm-6 col-md-4">
                            <br />
                            <div class="thumbnail">
                                <a class="movie-card-a" asp-action="ShowMovie" asp-controller="Movie" asp-route-movieId="@m.Id" asp-route-commentsPage="1">
                                    <img class="movie-card-img" src="@imgSrc" alt="...">
                                    <h4>@m.Title</h4>
                                    <p>@m.Category.CategoryName</p>
                                </a>
                            </div>
                        </div>
                         @if (j % 3 == 0 || j == Model.LatestMovies.Count())
                         {
                             @:</div>
                         }
                    }
                }
            </div>
            <div id="soon" class="tab-pane fade">
                @{
                    int k = 0;
                    foreach (var m in Model.ComingSoonMovies)
                    {
                        k++;
                        @if ((((k- 1) % 3 == 0) && (k != 1)) || (k == 1))
                        {
                            @:<div class="row">
}

                        var imgSrc = "images/MoviesPosters/" + m.Id.ToString() + ".jpg";
                        <div class="col-sm-6 col-md-4">
                            <br />
                            <div class="thumbnail">
                                <a class="movie-card-a" asp-action="ShowMovie" asp-controller="Movie" asp-route-movieId="@m.Id" asp-route-commentsPage="1">
                                    <img class="movie-card-img" src="@imgSrc" alt="...">
                                    <h4>@m.Title</h4>
                                    <p>@m.Category.CategoryName</p>
                                </a>
                            </div>
                        </div>
                        @if (k % 3 == 0 || k == Model.ComingSoonMovies.Count())
                        {
                        @:</div>
                    }
                    }
                }
            </div>
            <div id="highestRated" class="tab-pane fade">
                @{
                    int l = 0;
                    foreach (var m in Model.MostPopularMovies)
                    {
                       l++;
                        @if ((((l - 1) % 3 == 0) && (l != 1)) || (l == 1))
                        {
                            @:<div class="row">
                            }

                        var imgSrc = "images/MoviesPosters/" + m.Id.ToString() + ".jpg";
                        <div class="col-sm-6 col-md-4">
                            <br />
                            <div class="thumbnail">
                                <a class="movie-card-a" asp-action="ShowMovie" asp-controller="Movie" asp-route-movieId="@m.Id" asp-route-commentsPage="1">
                                    <img class="movie-card-img" src="@imgSrc" alt="...">
                                    <h4>@m.Title</h4>
                                    <p>@m.Category.CategoryName</p>
                                </a>
                            </div>
                        </div>
                        @if (l % 3 == 0 || l == Model.MostPopularMovies.Count())
                        {
                            @:</div>
                        }
                    }
                }
            </div>
        </div>
    </div>

</div>
<br />
<br />
@{
    for (int i = 0; i <= 2; i++)
    {
        <div id="@i" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="gridSystemModalLabel">@Model.LatestMovies.ElementAt(i).Title</h4>
                    </div>
                    <div class="modal-body">
                        <iframe height="500" src="https://www.youtube.com/embed/@Model.LatestMovies.ElementAt(i).TrailerUrl" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
    }
}