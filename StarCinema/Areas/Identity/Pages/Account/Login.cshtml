@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="app-form">
            <h2 class="app-form-h2"><i class="glyphicon glyphicon-user"></i> @ViewData["Title"]</h2>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Input.Email" placeholder="Emai" class="form-control app-form-input" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" placeholder="Password" class="form-control app-form-input" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-danger app-form-submit">LOGIN</button>
        </form>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
